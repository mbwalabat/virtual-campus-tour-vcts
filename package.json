{
  "name": "campus-navigation-integrated",
  "version": "1.0.0",
  "description": "Integrated Campus Navigation System - Full Stack MERN Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd frontend && npm run build && cp -r dist/* ../public/",
    "install-frontend": "cd frontend && npm install",
    "dev-frontend": "cd frontend && npm run dev",
    "build-frontend": "cd frontend && npm run build",
    "setup": "npm install && npm run install-frontend && npm run build-frontend",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev-frontend\"",
    "test": "jest",
    "test:api": "./scripts/test-api.sh",
    "seed": "node scripts/seed-data.js",
    "deploy": "./scripts/deploy.sh",
    "docker:build": "docker build -t campus-navigation-integrated .",
    "docker:run": "docker run -p 5000:5000 --env-file .env campus-navigation-integrated",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "campus",
    "navigation",
    "express",
    "mongodb",
    "nodejs",
    "mern",
    "api",
    "react",
    "fullstack"
  ],
  "author": "Campus Navigation Team",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/campus-navigation-integrated.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/campus-navigation-integrated/issues"
  },
  "homepage": "https://github.com/your-org/campus-navigation-integrated#readme"
}
